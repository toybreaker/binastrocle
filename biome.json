{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "files": {
    "includes": [
      "src/**/*.ts",
      "src/**/*.astro",
      "src/**/*.css",
      "*.mjs",
      "*.ts",
      "astro.config.*"
    ],
    "experimentalScannerIgnores": ["dist", "node_modules", ".astro"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  },
  "overrides": [
    {
      "includes": ["*.astro", "src/**/*.astro"],
      "formatter": {
        "enabled": true
      },
      "linter": {
        "enabled": true
      }
    }
  ]
}
